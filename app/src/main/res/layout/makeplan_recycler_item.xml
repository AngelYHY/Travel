<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/plan_time"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/plan_item_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南京"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/plan_item_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8月"
            android:gravity="center"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/plan_item_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_makeplan"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="70dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:id="@+id/plan_item_layout"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/plan_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/plan_feature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中山陵"
                    android:maxWidth="140dp"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/plan_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="南京市玄武区紫金山南独龙阜玩珠峰下"
                    android:maxWidth="140dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/plan_img"
                android:layout_alignRight="@id/plan_layout"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>