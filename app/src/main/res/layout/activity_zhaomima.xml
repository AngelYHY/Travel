<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EEEEEE">

        <ImageView
            android:id="@+id/zhao_phone_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@drawable/shopback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/zhao_phone_back"
            android:text="找回密码"
            android:textColor="#7F7F7F"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv_phone_register_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/lvchenglogin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_phone_register_logo"
            android:layout_centerHorizontal="true"
            android:text="旅城 "
            android:textColor="#42B9B5"
            android:textSize="20dp"
            android:textStyle="italic"
            android:typeface="sans" />

    </RelativeLayout>

    <View style="@style/line_30" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_login_name"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/phone" />

            <TextView
                android:id="@+id/tv_login_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_login_name"
                android:text="手机号:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_zhaoshoujihao"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/tv_login_name"
                android:background="@drawable/login_edittext_color"
                android:hint="请注册的手机号"
                android:padding="10dp"
                android:phoneNumber="true"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/line_20" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_login_password"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/yanzhengma" />

            <TextView
                android:id="@+id/tv_login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_login_password"
                android:text="验证码:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_zhaoyanzhengma"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/tv_login_password"
                android:background="@drawable/login_edittext_color"
                android:hint="请输入验证码"
                android:padding="10dp"
                android:phoneNumber="true"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_zhaoyanzhengma"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/et_zhaoyanzhengma"
                android:background="@drawable/login_edittext_color"
                android:text="获得验证码" />

        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/line_15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/btn_search_bg"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="19dp" />
    </RelativeLayout>
</LinearLayout>
