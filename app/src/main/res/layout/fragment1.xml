<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#59B4EE"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="上海"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/search_edit_text_shape"
            android:drawableLeft="@mipmap/search_32"
            android:drawablePadding="5dp"
            android:hint="请输入城市或景点"
            android:imeOptions="actionSearch"
            android:textSize="16sp"/>
        <!--android:imeOptions="actionSearch" 软键盘右下角为搜索-->
    </LinearLayout>

    <com.example.wo.travelt.widget.XRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>