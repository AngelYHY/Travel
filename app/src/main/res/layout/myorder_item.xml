<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



<RelativeLayout
android:layout_width="match_parent"
android:layout_height="140dp">

<ImageView
    android:id="@+id/iv_myorder"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:scaleType="fitXY"
    android:src="@mipmap/ic_launcher" />

<TextView
    android:id="@+id/evaluate_product_name"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="20dp"
    android:layout_toRightOf="@id/iv_myorder"
    android:text="欧美男士长袖t恤"
    android:textSize="14dp" />

<TextView
    android:id="@+id/tv_myorder_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:text="67"
    android:textColor="#242424"
    android:textSize="15dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_toLeftOf="@id/tv_myorder_price"
    android:text="￥"
    android:textSize="17dp" />

<TextView
    android:id="@+id/tv_myorder_count"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@id/tv_myorder_price"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:text="2"
    android:textColor="#696969"
    android:textSize="13dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/tv_myorder_price"
    android:layout_marginTop="11dp"
    android:layout_toLeftOf="@id/tv_myorder_count"
    android:text="X"
    android:textSize="12dp" />



<TextView
    android:id="@+id/myorder_heji_symbol"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="合计："
    android:layout_marginLeft="10dp"
   android:layout_alignParentLeft="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="5dp"
    android:textSize="16dp"
    android:textColor="#3A3A3A"/>

    <TextView
        android:id="@+id/myorder_all_moeny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="134"
        android:layout_toRightOf="@id/myorder_heji_symbol"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:textSize="16dp"
        android:textColor="#3A3A3A"/>

    <TextView
        android:id="@+id/myorder_symbol1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="元"
        android:layout_toRightOf="@id/myorder_all_moeny"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:textSize="16dp"
        android:textColor="#3A3A3A"/>

    <TextView
        android:id="@+id/myorder_ispay_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-08-26 14:51:00"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:textColor="#6E6E6E"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/myorder_ispay_order_time"
        android:text="订单时间："
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"/>





    </RelativeLayout>


<View
android:layout_width="match_parent"
android:layout_height="9dp"
android:background="#E6E6E6"/>



</LinearLayout>