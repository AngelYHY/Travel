<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#F6F6F6"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#FCFCFC">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买家已付款"
            android:textColor="#FC4132"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/iv_isbackproduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/isbackproduct_product_name"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_isbackproduct"
            android:text="欧美男士长袖t恤"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tv_isbackproduct_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="67"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:textColor="#242424"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_isbackproduct_price"
            android:text="￥"
            android:layout_marginTop="20dp"
            android:textSize="17dp"/>
        <TextView
            android:id="@+id/tv_isbackproduct_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_isbackproduct_price"
            android:text="2"
            android:textColor="#696969"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="13dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_isbackproduct_count"
            android:text="X"
            android:layout_below="@id/tv_isbackproduct_price"
            android:textSize="12dp"
            android:layout_marginTop="11dp"/>
        <TextView
            android:id="@+id/isbackproduct_ispay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-08-26 14:51:00"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#6E6E6E"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/isbackproduct_ispay_time"
            android:text="付款时间："
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:id="@+id/isbackproduct_heji_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="合计："
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/isbackproduct_all_moeny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/isbackproduct_heji_symbol"
            android:text="134"
            android:textColor="#FF5959"
            android:layout_centerVertical="true"
            android:textSize="17dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="#FF5959"
            android:layout_centerVertical="true"
            android:textSize="17dp"
            android:layout_toRightOf="@id/isbackproduct_all_moeny"/>


        <Button
            android:id="@+id/btn_isbackproduct_remind"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:background="@drawable/search_edit_text_shape"
            android:text="提醒发货"
          android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"/>





    </RelativeLayout>




</LinearLayout>
</android.support.v7.widget.CardView>