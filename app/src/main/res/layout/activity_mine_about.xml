<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EBEBEB">

        <ImageView
            android:id="@+id/mine_about_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@drawable/shopback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mine_about_back"
            android:text="关于旅城"
            android:textColor="#563636"
            android:textSize="18dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo_picture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:foregroundGravity="center" />

            <TextView
                android:id="@+id/about_us_show"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/logo_picture"
                android:layout_marginTop="20dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/title_one"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/about_us_show"
                android:gravity="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/context_one"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/title_one"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/context_one_pic"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/context_one"

                />

            <TextView
                android:id="@+id/title_two"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/context_one_pic"
                android:gravity="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/context_two"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/title_two"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/context_two_pic"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@id/context_two"
                android:layout_weight="1"
                android:background="@drawable/shop_kefu" />

            <ImageView
                android:id="@+id/context_two_pic2"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@id/context_two"
                android:layout_toRightOf="@id/context_two_pic"
                android:layout_weight="1"
                android:background="@drawable/kefu2" />

            <TextView
                android:id="@+id/title_three"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/context_two_pic2"
                android:gravity="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/context_three"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/title_three"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/context_three_pic"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/context_three"

                />

            <TextView
                android:id="@+id/title_four"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/context_three_pic"
                android:gravity="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/context_four"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/title_four"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/context_four"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/context_four_pic"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/context_four_pic2"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_toRightOf="@id/context_four_pic"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/context_four_pic3"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_toRightOf="@id/context_four_pic2"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/context_four_pic4"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_toRightOf="@id/context_four_pic3"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
