<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#F2EEE8E8"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<CheckBox
    android:id="@+id/cb_shoppingcart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:padding="10dp"/>
        <ImageView
            android:id="@+id/shoppingcart_product_pictures"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_toRightOf="@id/cb_shoppingcart"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/shopping_cart_product_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shoppingcart_product_pictures"
            android:text="复古亚麻连衣长裙"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp" />
        <RelativeLayout
            android:id="@+id/shopping_relativelayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/shopping_moeny_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/shopping_cart_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/shopping_moeny_symbol"
                android:layout_marginTop="20dp"

                android:text="75"
                android:textColor="#000000"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shoppingcart_product_pictures"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp">
            <ImageView
                android:id="@+id/shopping_cart_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/reduce2"
                android:padding="13dp"/>
            <TextView
                android:id="@+id/shopping_cart_product_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
               android:textColor="#000000"
                android:padding="13dp" />
            <ImageView
                android:id="@+id/shopping_cart_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"
                android:padding="13dp"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shoppingcart_product_pictures"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/input_shopping_cart_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加入时间:"
                />
            <TextView
                android:id="@+id/shopping_cart_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-08_08 10:37:57"
                android:layout_toRightOf="@id/input_shopping_cart_symbol"
                android:layout_marginLeft="5dp"/></RelativeLayout>



    </RelativeLayout>
</android.support.v7.widget.CardView>