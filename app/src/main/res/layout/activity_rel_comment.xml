<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="#fff"
    tools:context="com.example.administrator.release.RelCommentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/rel_img_head2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/wrong_img"/>
                <TextView
                    android:id="@+id/rel_tv_name2"
                    android:layout_toRightOf="@id/rel_img_head2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="木木木森"
                    android:layout_marginLeft="10dp"
                    android:textSize="19sp"/>
                <TextView
                    android:id="@+id/rel_tv_time2"
                    android:layout_toRightOf="@id/rel_img_head2"
                    android:layout_below="@id/rel_tv_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08月17日23:25"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/more_gray"/>
                <ImageView
                    android:id="@+id/rel_img_collect2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rel_selector_collect"
                    android:paddingBottom="15dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="15dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/rel_say_content2"
                    android:layout_margin="10dp"
                    android:lineSpacingExtra="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rel_say_content"/>
            </RelativeLayout>
            <views.NineGridlayout
                android:id="@+id/rel_say_ninegrid2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <views.CustomImageView
                android:id="@+id/rel_say_custom_img2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/rel_img_share2"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/rel_share_gray_32"
                    android:paddingBottom="8dp"
                    android:paddingRight="8dp"/>
                <ImageView
                    android:id="@+id/rel_img_say2"
                    android:layout_toLeftOf="@id/rel_img_share2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/rel_say_gray_32"
                    android:layout_marginRight="20dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"/>
                <ImageView
                    android:id="@+id/rel_img_good2"
                    android:layout_toLeftOf="@id/rel_img_say2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rel_selector_good"
                    android:paddingRight="8dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"/>
                <TextView
                    android:id="@+id/rel_tv_goodnum2"
                    android:layout_below="@id/rel_img_good2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="点赞个数"
                    android:textColor="#87a7d6"
                    android:drawableLeft="@drawable/who_good_28"
                    android:paddingTop="8dp"/>
            </RelativeLayout>
            <views.CommentListView
                android:id="@+id/rel_comments_lv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:divider="@null">
            </views.CommentListView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/rel_tv_judge2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:hint="评论"
                    android:background="@drawable/search_edit_text_shape"
                    android:drawableRight="@mipmap/rel_saysay_gray_32"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/layout_edt2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/rel_comment_layoutid2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@drawable/shape_say_layout"
            android:paddingTop="10dp"
            android:paddingRight="10dp">
            <Button
                android:id="@+id/rel_send_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送"
                android:textColor="@color/color_white"
                android:background="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/rel_comment_et2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/rel_send_btn2"
                android:hint="回复:"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingBottom="20dp" />
        </RelativeLayout>
        <View
            android:id="@+id/rel_view2"
            android:layout_above="@id/rel_comment_layoutid2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</RelativeLayout>
