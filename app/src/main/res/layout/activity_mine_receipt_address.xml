<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#EBEBEB">

            <ImageView
                android:id="@+id/mine_account_address_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@drawable/shopback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_account_address_back"
                android:text="管理收货地址"
                android:textColor="#563636"
                android:textSize="18dp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/lv_mine_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

        </ListView>

        <Button
            android:id="@+id/mine_new_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F24E31"
            android:text="添加新地址"
            android:textColor="#ffffff"
            android:textSize="16dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/mine_address_null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="您暂时还没有收货地址哦！"
        android:textColor="#4F4F4F"
        android:textSize="17dp"
        android:visibility="gone" />


</RelativeLayout>
