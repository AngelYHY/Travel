<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#D2F4ED"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/place_order_product_pictures"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/place_order_product_name"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/place_order_product_pictures"
            android:text="复古亚麻连衣长裙"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp" />
        <RelativeLayout
            android:id="@+id/place_order_relativelayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/place_order_moeny_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/place_order_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/place_order_moeny_symbol"
                android:layout_marginTop="20dp"
                android:text="75"
                android:textColor="#000000"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_order_product_name"
            android:layout_toRightOf="@id/place_order_product_pictures"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp">
            <ImageView
                android:id="@+id/place_order_ride"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ride"
                android:padding="4dp"/>
            <TextView
                android:id="@+id/place_order_product_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="18dp"
                android:phoneNumber="true"
                android:background="@null"/>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_order_product_pictures"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv_place1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖家承诺48小时内发货"
                android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
                android:textColor="#E8D70B"/>
        <TextView
            android:id="@+id/place_order_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发货时间："
            android:layout_toLeftOf="@id/tv_place1"
            android:textColor="#E8D70B"/>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>