<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">
        <RelativeLayout
            android:id="@+id/layout_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/rel_img_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/wrong_img"/>
            <TextView
                android:id="@+id/rel_tv_name"
                android:layout_toRightOf="@id/rel_img_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="木木木森"
                android:layout_marginLeft="10dp"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/rel_tv_time"
                android:layout_toRightOf="@id/rel_img_head"
                android:layout_below="@id/rel_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08月17日23:25"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/more_gray"/>
            <ImageView
                android:id="@+id/rel_img_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rel_selector_collect"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:layout_alignParentRight="true"/>
            <View
                android:id="@+id/view_intent"
                android:layout_toRightOf="@id/rel_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginRight="35dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_below="@id/layout_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rel_say_content"
                android:layout_margin="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="260"
                android:text="@string/rel_say_content"/>
            <TextView
                android:id="@+id/rel_full_content"
                android:layout_below="@id/rel_say_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看全文"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_img"
            android:layout_below="@id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <views.NineGridlayout
                android:id="@+id/rel_say_ninegrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <views.CustomImageView
                android:id="@+id/rel_say_custom_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_good"
            android:layout_below="@id/layout_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/rel_img_share"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rel_share_gray_32"
                android:paddingBottom="8dp"
                android:paddingTop="5dp"
                android:paddingRight="8dp"/>
            <ImageView
                android:id="@+id/rel_img_say"
                android:layout_toLeftOf="@id/rel_img_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rel_say_gray_32"
                android:layout_marginRight="20dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"/>
            <ImageView
                android:id="@+id/rel_img_good"
                android:layout_toLeftOf="@id/rel_img_say"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/rel_selector_good"
                android:layout_marginRight="20dp"
                android:paddingRight="10dp"
                android:paddingBottom="14dp"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/rel_tv_goodnum"
            android:layout_below="@id/layout_good"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text=" 0点赞个数"
            android:drawableLeft="@drawable/who_good_28"
            android:textColor="#87a7d6"
            android:padding="10dp"
            android:paddingTop="8dp" />
        <views.CommentListView
            android:id="@+id/rel_comments_lv"
            android:layout_below="@id/rel_tv_goodnum"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null">
        </views.CommentListView>

        <RelativeLayout
            android:layout_below="@id/rel_comments_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/rel_tv_judge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:hint="评论"
                android:background="@drawable/search_edit_text_shape"
                android:drawableRight="@mipmap/rel_saysay_gray_32"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>