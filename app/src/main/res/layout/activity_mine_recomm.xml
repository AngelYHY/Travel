<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.administrator.mine.MineRecommActivity">
    <RelativeLayout
        android:id="@+id/mine_recomm1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_white">
        <ImageView
            android:id="@+id/mine_rec_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shopback"
            android:layout_centerVertical="true"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的推荐"
            android:textSize="18dp"
            android:textColor="#563636"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mine_rec_back"/>
    </RelativeLayout>
    <View
        android:id="@+id/mine_view2"
        android:layout_below="@id/mine_recomm1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#a9b7b7"></View>
    <ListView
        android:id="@+id/mine_rec_lv1"
        android:layout_below="@id/mine_recomm1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null">
    </ListView>
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/mine_rec_float_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        fab:fab_colorNormal="@color/color_white"
        fab:fab_colorPressed="@color/more_gray"
        fab:fab_icon="@mipmap/recomm_add_black_32"
        fab:fab_size="mini"/>
</RelativeLayout>
