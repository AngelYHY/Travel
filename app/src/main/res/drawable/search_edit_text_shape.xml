<?xml version="1.0" encoding="utf-8"?>

<!--      输入框的形状  corners角        -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <corners android:radius="8dp"/>    <!--设置4个角的半径 14dp-->
    <stroke android:width="1dp" android:color="@color/dark_gray"/>   <!--描边，边框颜色-->
    <solid android:color="@color/color_white"/>   <!--填充颜色 白色-->
    <padding android:top="8dp" android:bottom="8dp" android:left="5dp"/>   <!--各个方向的间隔-->
</shape>


