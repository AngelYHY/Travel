<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. 可以自定义主题颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--控制 按钮 边框颜色 还有 toolbar 的返回键颜色 等-->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat">
        <!-- Customize your theme here. 可以自定义主题颜色-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TravelTabLayout" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextColor">#737383</item>
        <item name="tabSelectedTextColor">#987878</item>

    </style>

    <style name="ReleaseTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextColor">@color/dark_gray</item>
        <item name="tabSelectedTextColor">#737383</item>

    </style>

    <style name="food_souvenir_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="plan_look">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!--Dialog进入和退出的动画，从下往上进入在屏幕底部-->
    <style name="planLookAnim">
        <item name="android:windowEnterAnimation">@anim/plan_look_enter</item>
        <item name="android:windowExitAnimation">@anim/plan_look_exit</item>
    </style>

    <style name="style_search_hit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/shape_search</item>
        <item name="android:onClick">clickSuZhou</item>
    </style>


    <style name="main_tab_bottom">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/bottom_text_color_shop</item>
        <!-- 当前的文字太长，会以...表示 -->
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/transparent</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- 去按钮立体效果 -->
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/bottom_tab_padding_drawable</item>

    </style>

    <style name="line_15">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">15dp</item>
    </style>

    <style name="line_8">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="line_5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="line_30">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="line_20">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="line_10">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">9dp</item>
        <item name="android:background">#E6E6E6</item>
    </style>

    <style name="line_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <!--<item name="android:background">#a9b7b7</item>-->
        <item name="android:background">#E6E6E6</item>
    </style>

    <style name="line_7">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">7dp</item>
        <item name="android:background">#E6E6E6</item>
    </style>

    <style name="ToolbarRippleStyle" parent="Material.Drawable.Ripple.Touch.MatchView.Light">
        <item name="rd_backgroundColor">@android:color/transparent</item>
        <item name="rd_rippleColor">#33FFFFFF</item>
    </style>

    <style name="normal_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/normal_margin</item>
        <item name="android:layout_marginRight">@dimen/normal_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="et_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:background">@drawable/bg_round</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btn_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:background">@drawable/bg_blue_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>
